<h2>Comments</h2>

<%= render 'comments/form', comment: @comment, post: @post %>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Comment body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_comments.each do |comment| %>
      <tr>
        <td><%= comment.author %></td>
        <td><%= comment.comment_body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
