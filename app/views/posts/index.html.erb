<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% if logged_in? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <% if post.front_image != '' && post.front_image != nil %>
          <td><%= image_tag post.front_image, class: 'post-front-image' %></td>
        <% else %>

        <% end %>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <% if logged_in? %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>