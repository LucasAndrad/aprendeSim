<p id="notice"><%= notice %></p>
<h1 class="post-title"> <%= @post.title %> </h1>
<div class="post-info">
	<div class="subinfo post-author">
		<%= render 'author' %>
	</div>
	<div class="subinfo post-categories">
		<div class="post-category">
			Categoria: <%= link_to @category.name, subcategories_show_all_path(@category), class: 'author-name' %>
		</div>
		<div class="post-subcategory">
			Subcategoria: <%= link_to @subcategory.name, sub_posts_path(@subcategory), class: 'author-name' %>
		</div>
	</div>
</div>
<div class="post-body-container">
	<div class="side post-body">
		<%= raw @post.body %>
	</div>
	<div class="side post-right-bar">
		<div class="right-bar-categories">
			<h4> CATEGORIAS </h4>
			<% @categories.each do |category| %>
				<%= link_to category.name, subcategories_show_all_path(category), class: 'post-categories-name' %>
				<br>
			<% end %>
		</div>
		<div class="posts-most-views">
			<h4> MAIS VISTOS </h4>
			<% @posts_most_views.each do |post_views| %>
				<%= link_to post_views.title, post_path(post_views), class: 'post-views-title' %>
				<br>
			<% end %>
		</div>
	</div>
</div>
<% if logged_in? %>
	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>
<% end %>
<br>
