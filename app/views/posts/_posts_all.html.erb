<h2> Post Partials </h2>

<% @posts.each do |post| %>
	<div class="single-post">
		<h3> <%= post.title %> </h3>
		<% if post.front_image != '' && post.front_image != nil %>
			<%= image_tag post.front_image, class: 'post-front-image' %>
		<% else %>

		<% end %>
		<%= post.intro_text %>
	</div>

<% end %>