<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :post_title %>
  </div>

  </br>
    <%= form.select :category_id, @categories.collect {|c| [c.name, c.id]}, {}, { id: 'select-category' } %>
  </br>

  </br>
    <%= form.select :subcategory_id, @subcategories.collect {|s| [s.name, s.id]} %>
  </br>

  <div class="field">
    <%= form.label :front_image %>
    <%= form.text_field :front_image, id: :post_front_image %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, id: :post_url %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :post_body %>
  </div>

  <div class="field">
    <%= form.label :intro_text %>
    <%= form.text_area :intro_text, id: :post_intro_text %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

